<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/detail_movie_poster" />

    <TextView
        android:id="@+id/detail_text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_text_title"
        android:layout_toLeftOf="@+id/detail_movie_poster"
        android:layout_marginLeft="25dp"/>

    <ImageView
        android:id="@+id/detail_movie_poster"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
  />

    <TextView
        android:id="@+id/detail_text_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/detail_movie_poster" />

</RelativeLayout>